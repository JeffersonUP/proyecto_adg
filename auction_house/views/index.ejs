<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Reinos</title>
</head>
<body>
    <h1>Reinos</h1>

    <form action="/" method="GET">
        <input type="text" name="search" placeholder="Buscar reino..." value="<%= searchQuery %>">
        <button type="submit">Buscar</button>
    </form>

    <ul>
        <% realms.forEach(realm => { %>
            <li>
                <a href="/reino/<%= realm.id %>"><%= realm.name %></a>
            </li>
        <% }) %>
    </ul>
</body>
</html>
